            android_artifact_type: "APK",
            android_artifact_path: "app-release-unsigned.apk",
            service_credentials_file: "google.json"
        )
    end
    
    lane :production do
        upload_to_play_store(
            apk: "app-release-unsigned.apk"
        )
    end
end
